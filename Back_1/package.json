{
  "name": "bethere-api",
  "version": "1.0.0",
  "description": "BeThere REST API with MongoDB and Mock Data fallback",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "cross-env NODE_ENV=test ava",
    "test:watch": "cross-env NODE_ENV=test ava --watch",
    "coverage": "c8 npm test"
  },
  "ava": {
    "timeout": "1m",
    "verbose": true,
    "files": [
      "tests/**/*.test.js"
    ],
    "nodeArguments": [
      "--experimental-modules"
    ]
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "mongoose": "^7.6.3",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "ava": "^5.3.1",
    "c8": "^10.1.2",
    "cross-env": "^10.1.0",
    "got": "^14.4.3",
    "mock-require": "^3.0.3",
    "nodemon": "^3.0.1",
    "sinon": "^21.0.0",
    "test-listen": "^1.1.0"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
